#!/usr/bin/env bash

test -z "$SRC"
if [ "$?" -eq 0 ]; then
  echo -e "\033[31mERROR:\033[0m \$SRC env var was not set, exiting..."
  exit 1
fi

if [ $# -eq 0 ]; then
  cd "$SRC" || exit
  return;
fi

srcdir="$SRC/$1"

if [ -d "$srcdir" ]; then
  cd "$srcdir" || exit
else
  echo -e "\033[31mERROR:\033[0m No directory $1"
  exit 1
fi
